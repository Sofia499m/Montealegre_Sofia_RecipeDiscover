<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Montealegre_Sofia_RecipeDiscover.RecipeBrowserPage"
             Title="">
	<VerticalStackLayout Padding="16">
		<Label Text="Find a Recipe" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Padding="20"/>
		<SearchBar 
            Placeholder="Search recipes..."
            Text="{Binding SearchText}"
            SearchCommand="{Binding SearchCommand}"
        />

		<CollectionView ItemsSource="{Binding Recipes}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Grid Padding="8" ColumnDefinitions="100,*">

						<Image 
                            Grid.Column="0"
                            Source="{Binding strMealThumb}" 
                            Aspect="AspectFill"
                            HeightRequest="80" WidthRequest="80"
                            />

						<VerticalStackLayout Grid.Column="1" Padding="8,0">
							<Label Text="{Binding strMeal}" FontAttributes="Bold" FontSize="16"/>
							<Label Text="{Binding strCategory}" LineBreakMode="TailTruncation"/>
							<Label Text="{Binding strTags}" LineBreakMode="TailTruncation"/>
						</VerticalStackLayout>

					</Grid>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>
</ContentPage>