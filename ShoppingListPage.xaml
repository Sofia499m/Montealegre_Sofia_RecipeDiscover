<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Montealegre_Sofia_RecipeDiscover.ShoppingListPage"
             Title="">
	<VerticalStackLayout Padding="16" Spacing="16">
		<Label Text="Shopping Cart" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Padding="20"/>

		<Button Text="Add Item" />

		<CollectionView ItemsSource="{Binding Items}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Grid ColumnDefinitions="40,*">

						<CheckBox IsChecked="{Binding IsChecked}" />

						<Label 
                            Grid.Column="1"
                            Text="{Binding Name}" 
                            TextDecorations="{Binding IsChecked, Converter={StaticResource StrikeThroughConverter}}" />
					</Grid>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>

	</VerticalStackLayout>
</ContentPage>