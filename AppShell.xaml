<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Montealegre_Sofia_RecipeDiscover.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Montealegre_Sofia_RecipeDiscover"
    Shell.FlyoutBehavior="Flyout"
    Title="Montealegre_Sofia_RecipeDiscover">

	<!-- Bottom Tabs -->
	<FlyoutItem Title="Browse Recipes" Icon="search.png">
		<Tab>
			<ShellContent ContentTemplate="{DataTemplate local:RecipeBrowserPage}" />
		</Tab>
	</FlyoutItem>
	<FlyoutItem Title="Meal Planner" Icon="calendar.png">
		<Tab>
			<ShellContent ContentTemplate="{DataTemplate local:MealPlannerPage}" />
		</Tab>
	</FlyoutItem>
	<FlyoutItem Title="Shopping List" Icon="list.png">
		<Tab>
			<ShellContent ContentTemplate="{DataTemplate local:ShoppingListPage}" />
		</Tab>						
	</FlyoutItem>
	<FlyoutItem Title="Settings" Icon="list.png">
		<Tab>
			<ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
		</Tab>
	</FlyoutItem>

</Shell>
