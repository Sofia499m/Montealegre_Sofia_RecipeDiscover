<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Montealegre_Sofia_RecipeDiscover.MainPage"
			 Title="Recipe Discover and Meal Planner">
	<ScrollView>
		<VerticalStackLayout>
			<Label Text="Recipe Discover"
				   HorizontalOptions="Center"
				   FontSize="Header"
				   Margin="0,20,0,0"/>
			<HorizontalStackLayout HorizontalOptions="Center">
				<Entry 
				x:Name="Search" 
				Placeholder="Enter Ingredients..."
				HorizontalOptions="Center"
				WidthRequest="600"
				HeightRequest="50"
				Margin="0,40,0,0"
				Background="lightSalmon"
				Completed="OnSearchCompleted"/>
			</HorizontalStackLayout>
			<CollectionView x:Name="FoodList"
							ItemsLayout="VerticalGrid, 3"
							Margin="10">
				<CollectionView.ItemTemplate>
					<DataTemplate>
					<Grid Padding="10">
						<Grid.RowDefinitions>
								<RowDefinition Height="150"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Image Grid.Row="0"
								   Source="{Binding strMealThumb}"
								   Aspect="AspectFill"/>
							<Label Grid.Row="1"
								   Text="{Binding strMeal}"
								   HorizontalOptions="Center"/>
						</Grid>
				</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</VerticalStackLayout>
	</ScrollView>
		
</ContentPage>
